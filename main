#henriqe vera
#401
import arcade
import random
#limitation de lecran
SCREEN_WIDTH = 800
SCREEN_HEIGHT = 600

#on cree le ball et ses attributs

class Ball:
    def __init__(self, x, y, change_x, change_y, radius, color):
        self.x = x
        self.y = y
        self.change_x = change_x
        self.change_y = change_y
        self.radius = radius
        self.color = color

#update sur le mouvement
    
    def update(self):
        self.x += self.change_x
        self.y += self.change_y
        if self.x < self.radius:
            self.change_x *= -1
            self.x = self.radius
        if self.x > SCREEN_WIDTH - self.radius:
            self.change_x *= -1
            self.x = SCREEN_WIDTH - self.radius
        if self.y < self.radius:
            self.change_y *= -1
            self.y = self.radius
        if self.y > SCREEN_HEIGHT - self.radius:
            self.change_y *= -1
            self.y = SCREEN_HEIGHT - self.radius

    def draw(self):
        arcade.draw_circle_filled(self.x, self.y, self.radius, self.color)

#on cree le recatbgle et ses attributs

class Rectangle():
    def __init__(self, width, center_x, center_y, color, height):
        self.width = width
        self.center_x = center_x
        self.center_y = center_y
        self.color = color
        self.height = height
        self.change_x = 4
        self.change_y = 4

    def draw(self):
        arcade.draw_rectangle_filled(self.center_x, self.center_y, self.width, self.height, self.color, 0)

    def update(self):
        self.center_x += self.change_x
        self.center_y += self.change_y
        if self.center_y > SCREEN_HEIGHT:
            self.change_y *=-1
        if self.center_y < 0 :
            self.change_y *= -1
        if self.center_x > SCREEN_WIDTH:
            self.change_x *= -1
        if self.center_x < 0:
            self.change_x *= -1

class MyGame(arcade.Window):
    def __init__(self):
        super().__init__(SCREEN_WIDTH, SCREEN_HEIGHT, "Exercise #1")
        self.ball_list = []
        self.rectangle_list = []
#on dessine lorsue click
    def on_mouse_press(self, x, y, button, modifiers):
        if button == arcade.MOUSE_BUTTON_LEFT:
            color = arcade.color.RED
            ball = Ball(x, y, random.uniform(-5, 5), random.uniform(-5, 5), random.randint(10, 30), color)
            self.ball_list.append(ball)

        elif button == arcade.MOUSE_BUTTON_RIGHT:
            color = arcade.color.BLUE
            rectangle = Rectangle(random.randint(20, 50), x, y, color, random.randint(20, 50))
            self.rectangle_list.append(rectangle)

#on retourne sur la liste pour finaolement dessiner
   
   def on_draw(self):
        arcade.start_render()
        for ball in self.ball_list:
            ball.draw()
        for rectangle in self.rectangle_list:
            rectangle.draw()

    def on_update(self, delta_time):
        for ball in self.ball_list:
            ball.update()
        for rectangle in self.rectangle_list:
            rectangle.update()

def main():
    my_game = MyGame()
    arcade.run()

if __name__ == "__main__":
    main()
